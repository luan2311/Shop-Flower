@using PagedList.Mvc;
@using PagedList;
@model IPagedList<ShopFlower.Models.TAIKHOAN>

@{
    ViewBag.Title = "Quản lý Tài Khoản";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center">QUẢN LÝ TÀI KHOẢN</h1>

