@model List<ShopFlower.Models.Cart>
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_LayoutChung.cshtml";
}

<section class="main-cart-page main-container col1-layout">
    <div class="main container cartpcstyle">
        <div class="wrap_background_aside margin-bottom-40">
            <div class="header-cart">
                <div class="title-block-page">
                    <h1 class="title_cart">
                        <span>Giỏ hàng của bạn</span>
                    </h1>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-12">
                    <div class="clearfix"></div>
                    <div class="cart-page d-xl-block d-none">
                        <div class="drawer__inner">
                            <div class="CartPageContainer">
                                <div class="cart-header-info">
                                    <div>Thông tin sản phẩm</div><div>Đơn giá</div><div>Số lượng</div><div>Thành tiền</div>
                                </div>
                                <div class="ajaxcart__inner ajaxcart__inner--has-fixed-footer cart_body items">
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var item in Model)
                                        {
                                            <div class="ajaxcart__row" data-product-id="@item.ProductId">
                                                <div class="ajaxcart__product cart_product">
                                                    <a href="@Url.Action("chi_tiet_san_pham", "SanPham", new { id = item.ProductId.Trim() })" class="ajaxcart__product-image cart_image" title="@item.ProductName"><img src="~/Images/@item.ProductImage" alt="@item.ProductName"></a>
                                                    <div class="grid__item cart_info">
                                                        <div class="ajaxcart__product-name-wrapper cart_name">
                                                            <a href="@Url.Action("chi_tiet_san_pham", "SanPham", new { id = item.ProductId.Trim() })" class="ajaxcart__product-name h4" title="@item.ProductName">@item.ProductName</a>
                                                            <a title="Xóa" class="cart__btn-remove remove-item-cart ajaxifyCart--remove" href="@Url.Action("XoaGioHang", "Cart", new { MaSP = item.ProductId })"><i class="fa-solid fa-trash" aria-label="Remove Item"></i></a>
                                                        </div>
                                                        <div class="grid">
                                                            <div class="grid__item one-half text-right cart_prices">
                                                                <span class="cart-price">@string.Format("{0:N0}", item.Price)₫</span>
                                                            </div>
                                                        </div>
                                                        <div class="grid">
                                                            <div class="grid__item one-half cart_select">
                                                                <div class="ajaxcart__qty input-group-btn">
                                                                    @* Bỏ form và onchange, thêm class và data-attribute *@
                                                                    <input type="number" name="txtSoLuong" value="@item.Quantity" min="1" class="cart-quantity-input" data-product-id="@item.ProductId">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="grid justify-right">
                                                            <div class="grid__item one-half text-right cart_prices">
                                                                @* Thêm class để dễ dàng cập nhật bằng JS *@
                                                                <span class="cart-price item-total-price">@string.Format("{0:N0}", item.TotalPrice)₫</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <p class="text-center">Giỏ hàng của bạn đang trống.</p>
                                    }
                                </div>
                                <div class="ajaxcart__footer ajaxcart__footer--fixed cart-footer">
                                    <div class="row">
                                        <div class="col-lg-8 col-12">
                                            <a class="btn-proceed-checkout btn-checkouts" title="Tiếp tục mua hàng" href="~/SanPham/tat_ca_san_pham">Tiếp tục mua hàng</a>
                                        </div>
                                        <div class="col-lg-4 col-12">
                                            <div class="ajaxcart__subtotal">
                                                <div class="cart__subtotal">
                                                    <div class="cart__col-6">Tổng tiền:</div>
                                                    @* Thêm class để dễ dàng cập nhật bằng JS *@
                                                    <div class="text-right cart__totle"><span class="total-price cart-subtotal-price">@string.Format("{0:N0}", (object)ViewBag.TongThanhTien)₫</span></div>
                                                </div>
                                            </div>
                                            <div class="cart__btn-proceed-checkout-dt" style=" font-size: 1.4rem;">
                                                <a href="@Url.Action("ThanhToan", "Checkout")" class="btn btn-primary btn-lg btn-block">
                                                    TIẾN HÀNH THANH TOÁN
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="cart-mobile-page d-block d-xl-none">
                        <div class="CartMobileContainer"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            // Function to update cart via AJAX
            function updateCart(productId, quantity) {
                // Prevent sending requests for invalid quantities
                if (isNaN(quantity) || quantity < 1) {
                    return;
                }

                $.ajax({
                    url: '@Url.Action("CapNhatGioHang", "Cart")', // Make sure this points to the correct action
                    type: 'POST',
                    data: {
                        MaSP: productId,      // Changed from 'productId' to 'MaSP'
                        txtSoLuong: quantity  // Changed from 'quantity' to 'txtSoLuong'
                    },
                    success: function (response) {
                        // Your existing success logic will now work correctly
                        if (response.success) {
                            var productRow = $('.ajaxcart__row[data-product-id="' + productId + '"]');
                            productRow.find('.item-total-price').text(response.itemTotalPrice + '₫');
                            $('.cart-subtotal-price').text(response.cartSubtotal + '₫');
                            $('.count_item_pr').text(response.cartCount);
                        } else {
                            alert('Lỗi: ' + response.message);
                        }
                    },
                    error: function () {
                        alert('Đã xảy ra lỗi khi cập nhật giỏ hàng. Vui lòng thử lại.');
                    }
                });
            }

            // Event for typing or using arrows in the input
            $('.cart-quantity-input').on('input', function () {
                var input = $(this);
                var productId = input.data('product-id');
                var quantity = parseInt(input.val());
                updateCart(productId, quantity);
            });

            // Event for the "-" button
            $('.btn-qty-minus').on('click', function () {
                var input = $(this).siblings('.cart-quantity-input');
                var currentVal = parseInt(input.val());
                if (currentVal > 1) {
                    input.val(currentVal - 1).trigger('input'); // Trigger the input event to fire AJAX
                }
            });

            // Event for the "+" button
            $('.btn-qty-plus').on('click', function () {
                var input = $(this).siblings('.cart-quantity-input');
                var currentVal = parseInt(input.val());
                input.val(currentVal + 1).trigger('input'); // Trigger the input event to fire AJAX
            });
        });
    </script>
}